            <label class="control-label" ><%= t(:items_per_page) %> <span class='text-danger'>*</span></label>
            <div class="">
              <%= text_field_tag "options[partners][items_per_page]", nil, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-6">
