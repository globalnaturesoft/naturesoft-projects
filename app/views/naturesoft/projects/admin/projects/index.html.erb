<% title "Projects" %>

<div class="page_actions">
    <%= link_to ("#{t(:new_project)}" + '<i class="icon-plus22 position-right"></i>').html_safe, naturesoft_projects.new_admin_project_path, class: 'btn btn-primary' %>
</div>
<br />

<form class="listing-form sortable" sort-url="<%= naturesoft.admin_custom_sort_path(class: "Naturesoft::Projects::Project") %>">
    
    <div class="panel panel-flat">
        <div class="panel-body filter-box">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_by) %></label>
                        <%= select_tag(:sort_by, options_for_select(Naturesoft::Projects::Project.sort_by, :selected => params[:sort_by]), class: "select2", "sort-cond": "naturesoft_projects_projects.custom_order") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_order) %></label>
                        <%= select_tag(:sort_orders, options_for_select(Naturesoft::Projects::Project.sort_orders, :selected => params[:sort_orders]), class: "select2", "sort-cond": "asc") %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group has-feedback">
                        <label><%= t(:search) %></label>
                        <input type="text" name="keyword" class="form-control" placeholder="Enter search..." value="<%= params[:key] %>">
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="btn-group list_actions mb-10 hide">
        <button type="button" class="btn btn-xs btn-info dropdown-toggle" data-toggle="dropdown">
            Actions <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">											
            <li>
                <a href="" data-href="<%= naturesoft_projects.delete_admin_projects_path %>" data-confirm="Are you sure!" data-method="DELETE">
                    <i class="icon-enter"></i> Delete
                </a>
            </li>            
        </ul>
    </div>
    <!-- Basic datatable -->
    <div class="panel panel-flat">        
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr class="bg-teal-800">
                        <th width="1%" class="check_all_list">
                            <input type="checkbox" class="styled">
                        </th>
                        <th width="1%"><%= t(:image) %></th>
                        <th><%= t(:name) %></th>
                        <th><%= t(:description) %></th>
                        <th><%= t(:website) %></th>
                        <th class="text-center"><%= t(:creator)%></th>
                        <th><%= t(:created_at) %></th>
                        <th class="text-right"><%= t(:actions) %></th>
                    </tr>
                </thead>
                <tbody>
                    <% @projects.each do |project| %>
                        <tr>
                            <td width="1%" class="text-nowrap">
                                <input type="checkbox" class="node styled"
                                    name="ids[]"
                                    value="<%= project.id %>"
                                />
                                <input type="hidden"
                                    name="custom_order"
                                    value="<%= project.custom_order %>"
                                />
                            </td>
                            <td>
                                <%= image_tag(image_src(project.main_image.image.system), size: "60x60", class: "img-rounded img-preview") %>
                            </td>
                            <td>
                                <%= project.name %><br>
                                <%= display_status(project.status) %>
                            </td>
                            <td>
                                <%= project.description %>
                            </td>
                            <td>
                                <%= link_to(project.website, project.website, target: "_blank") %>
                            </td>
                            <td class="text-center">
                                <%= user_box(project.user) %>
                            </td>
                            <td><%= project.created_at.strftime("%d/%m/%Y") %></td>
                            <td class="text-right">
                                <div class="btn-group">
                                    <%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_projects.edit_admin_project_path(project), class: "btn bg-teal-400 btn-icon" %>
                                    <button type="button" class="btn bg-teal-400 dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <% if project.status == 'inactive' %>
                                            <li>
                                                <%= link_to "<i class=\"icon-unlocked2\"></i> Enable".html_safe, naturesoft_projects.enable_admin_projects_path(project), method: :put %>
                                            </li>
                                        <% end %>
                                        <% if project.status == 'active' %>
                                            <li>
                                                <%= link_to "<i class=\"icon-lock2\"></i> Disable".html_safe, naturesoft_projects.disable_admin_projects_path(project), method: :put %>
                                            </li>
                                        <% end %>
                                        <li class="divider"></li>
                                        <li>
                                            <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe + t(:delete), naturesoft_projects.admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' } , class: "backend_delete_item" %>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="dataTables_wrapper no-footer">
                <div class="datatable-footer showed">
                    <div class="dataTables_info" ><%= page_entries_info @projects %></div>
                    <div class="dataTables_paginate paging_simple_numbers">
                        <%= will_paginate @projects, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
            </div>  
        </div>
        
    </div>
    <!-- /basic datatable -->
</form>