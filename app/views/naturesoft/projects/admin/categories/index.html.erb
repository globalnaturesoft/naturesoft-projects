<% title "Categories of Project" %>

<div class="page_actions">
    <%= link_to ("#{t(:new_category)}" + '<i class="icon-plus22 position-right"></i>').html_safe, naturesoft_projects.new_admin_category_path, class: 'btn btn-primary' %>
</div>
<br />

<form class="listing-form">
    
    <div class="panel panel-flat">
        <div class="panel-body filter-box">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_by) %></label>
                        <%= select_tag(:sort_by, options_for_select(Naturesoft::Projects::Category.sort_by, :selected => params[:sort_by]), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label><%= t(:sort_order) %></label>
                        <%= select_tag(:sort_orders, options_for_select(Naturesoft::Projects::Category.sort_orders, :selected => params[:sort_orders]), class: "select2") %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group has-feedback">
                        <label><%= t(:search) %></label>
                        <input type="text" name="keyword" class="form-control" placeholder="Enter search..." value="<%= params[:key] %>">
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Basic datatable -->
    <div class="panel panel-flat">        
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr class="bg-teal-800">
                        <th><%= t(:name) %></th>
                        <th><%= t(:description) %></th>
                        <th><%= t(:status) %></th>
                        <th class="text-center"><%= t(:creator)%></th>
                        <th><%= t(:created_at) %></th>
                        <th class="text-right"><%= t(:actions) %></th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                        <tr>
                            <td>
                                <%= category.name %>
                            </td>
                            <td>
                                <%= category.description %>
                            </td>
                            <td>
                                <%= display_status(category.status) %>
                            </td>
                            <td class="text-center">
                                <%= user_box(item.user) %>
                            </td>
                            <td><%= category.created_at.strftime("%d/%m/%Y") %></td>
                            <td class="text-right">
                                <div class="btn-group">
                                    <%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_projects.edit_admin_category_path(category), class: "btn bg-teal-400 btn-icon" %>
                                    <button type="button" class="btn bg-teal-400 dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <% if category.status == 'inactive' %>
                                            <li>
                                                <%= link_to "<i class=\"icon-unlocked2\"></i> Enable".html_safe, naturesoft_projects.enable_admin_categories_path(category), method: :put %>
                                            </li>
                                        <% end %>
                                        <% if category.status == 'active' %>
                                            <li>
                                                <%= link_to "<i class=\"icon-lock2\"></i> Disable".html_safe, naturesoft_projects.disable_admin_categories_path(category), method: :put %>
                                            </li>
                                        <% end %>
                                        <li class="divider"></li>
                                        <li>
                                            <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe + t(:delete), naturesoft_projects.admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } , class: "backend_delete_item" %>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
        <div class="dataTables_wrapper no-footer">
            <div class="datatable-footer showed">
                <div class="dataTables_info" ><%= page_entries_info @categories %></div>
                <div class="dataTables_paginate paging_simple_numbers">
                    <%= will_paginate @categories, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                </div>
            </div>
        </div>    
    </div>
    <!-- /basic datatable -->
</form>